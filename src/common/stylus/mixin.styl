border-1px($color)
    position: relative
    &::after
        content: ' '
        display: block
        position: absolute
        bottom: 0
        left: 0
        width: 100%
        border-top: 1px solid $color
border-none()
    &:after
        border: none

bg-img($url)
    background-image: url($url+'@2x.png')
    @media (-webkit-min-device-pixel-ratio: 3), (-webkit-min-device-pixel-ratio: 3)
        background-image: url($url+'@3x.png')